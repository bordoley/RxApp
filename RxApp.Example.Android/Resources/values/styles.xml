<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <color name="splash_background_color">#FF69B4FF</color>

    <!-- 
   		Define a theme for your application's splash screen, during start up. This should either be an image
   		or solid background color. In order to ensure a consistent splash screen experience, you must
   		specify the splash screen theme as you application's theme in the AndroidManifest. This is due to
   		how android may not always start the application with the startup activity.
	-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="android:windowBackground">@color/splash_background_color</item>
 		<item name="android:windowNoTitle">true</item>
    </style>

    <!--
    	Update your activity's theme in the RxActivity.OnCreate() method.
    -->
	<style name="RxAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
	    <item name="android:windowNoTitle">true</item>
	    <!--We will be using the toolbar so no need to show ActionBar-->
	    <item name="windowActionBar">false</item>
	    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
	    <!-- colorPrimary is used for the default action bar background -->
	    <item name="colorPrimary">#2196F3</item>
	    <!-- colorPrimaryDark is used for the status bar -->
	    <item name="colorPrimaryDark">#1976D2</item>
	    <!-- colorAccent is used as the default value for colorControlActivated
	         which is used to tint widgets -->
	    <item name="colorAccent">#FF4081</item>
	  	<!-- You can also set colorControlNormal, colorControlActivated
	         colorControlHighlight and colorSwitchThumbNormal. -->
    </style>
</resources>